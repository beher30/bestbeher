# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
DJANGO_SETTINGS_MODULE=myproject.settings

# Database Settings - PostgreSQL for Production
DATABASE_NAME=avyevexy_beherbest
DATABASE_USER=avyevexy_id_rsa
DATABASE_PASSWORD=your-database-password
DATABASE_HOST=localhost
DATABASE_PORT=5432
# Full DATABASE_URL (will be provided by Render in production)
# DATABASE_URL=postgresql://username:password@host:port/database_name

# Security Settings
ALLOWED_HOSTS=.onrender.com,localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://beherbest.onrender.com,https://*.onrender.com
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Static Files
DISABLE_COLLECTSTATIC=0

# Python Settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
WEB_CONCURRENCY=4

# FFmpeg Path (if needed)
FFMPEG_PATH=/usr/bin/ffmpeg